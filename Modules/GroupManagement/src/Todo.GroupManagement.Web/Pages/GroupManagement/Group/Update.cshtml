@page
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Todo.GroupManagement.Web.Pages.GroupManagement.Group.UpdateModel
@{
    Layout = null;

}
<abp-dynamic-form abp-model="Group" asp-page="/GroupManagement/Group/Update">
    <abp-modal>
        <abp-modal-header title="@Model.Group.Name Düzenle"></abp-modal-header>

        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-form-content/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>